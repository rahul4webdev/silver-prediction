# Silver Price Prediction System - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# UPSTOX API (MCX Data)
# =============================================================================
UPSTOX_API_KEY=640897e6-80ba-40b7-a750-95b474a59fb9
UPSTOX_API_SECRET=your_upstox_api_secret
UPSTOX_REDIRECT_URI=https://predictionapi.gahfaudio.in/api/v1/auth/callback
UPSTOX_ACCESS_TOKEN=your_access_token_here

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=silver_prediction
POSTGRES_USER=prediction_user
POSTGRES_PASSWORD=your_secure_password

# =============================================================================
# REDIS (Caching & Celery Broker)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# BACKUP DATA SOURCES
# =============================================================================
ALPHA_VANTAGE_API_KEY=

# =============================================================================
# APPLICATION
# =============================================================================
SECRET_KEY=your_jwt_secret_key_min_32_chars_change_this
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_HOST=127.0.0.1
API_PORT=8023
API_DOMAIN=predictionapi.gahfaudio.in

# Frontend Configuration
FRONTEND_URL=https://prediction.gahfaudio.in
DASHBOARD_DOMAIN=prediction.gahfaudio.in

# =============================================================================
# PATHS (CyberPanel/OpenLiteSpeed)
# =============================================================================
BACKEND_PATH=/home/predictionapi.gahfaudio.in/public_html
FRONTEND_PATH=/home/prediction.gahfaudio.in/public_html
DATA_PATH=/home/predictionapi.gahfaudio.in/data
MODEL_WEIGHTS_PATH=/home/predictionapi.gahfaudio.in/data/models

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================
# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# ML MODEL SETTINGS
# =============================================================================
MODEL_RETRAIN_HOUR=2
PREDICTION_INTERVALS=30m,1h,4h,daily

# =============================================================================
# CELERY
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
